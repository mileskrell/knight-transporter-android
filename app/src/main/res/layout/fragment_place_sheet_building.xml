<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa">

    <TextView
        android:id="@+id/place_sheet_building_name"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/pantone7501"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hill Center for the Mathematical Sciences" />

    <ImageView
        android:id="@+id/place_sheet_building_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/place_sheet_building_name"
        tools:ignore="ContentDescription"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/place_sheet_building_image_error"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/place_sheet_building_image"
        app:layout_constraintEnd_toEndOf="@id/place_sheet_building_image"
        app:layout_constraintStart_toStartOf="@id/place_sheet_building_image"
        app:layout_constraintTop_toTopOf="@id/place_sheet_building_image" />

    <TextView
        android:id="@+id/place_sheet_building_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/place_sheet_building_image"
        app:layout_constraintTop_toTopOf="@id/place_sheet_building_image"
        tools:text="Building number: 3752" />

    <TextView
        android:id="@+id/place_sheet_building_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:paddingBottom="8dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/place_sheet_building_image"
        app:layout_constraintTop_toBottomOf="@id/place_sheet_building_number"
        tools:text="110 Frelinghuysen Road\nPiscataway, NJ 08854-8019" />

    <TextView
        android:id="@+id/place_sheet_building_alert"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:paddingTop="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/place_sheet_building_address"
        tools:autoLink="web"
        tools:text="Alert: http://studentcenters.rutgers.edu/student-centers/livingston-student-center/"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/place_sheet_building_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:paddingTop="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/place_sheet_building_alert"
        tools:text="For campus information go to the Student Street Information Desk on the 1st floor or call 973-353-1766"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/place_sheet_building_website"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:paddingTop="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/place_sheet_building_description"
        tools:autoLink="web"
        tools:text="Website: http://studentcenters.rutgers.edu/student-centers/livingston-student-center/"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/place_sheet_building_departments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/place_sheet_building_website"
        tools:text="Departments\n• NB SAS Some dept.\n• IP&amp;O Something\n• OIT Another thing"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>
